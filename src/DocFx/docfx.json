{
  "metadata": [
    {
      "src": [
        {
          "files": [ "*.csproj" ],
          "src": "../UnityFx.Purchasing"
        }
      ],
      "dest": "api",
      "properties":
      {
        "TargetFramework": "netstandard2.0"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "api/**.yml", "api/index.md" ]
      },
      {
        "files": [ "articles/**.md", "articles/**/toc.yml", "toc.yml", "*.md" ],
        "exclude": [ "obj/**", "_site/**" ]
      }
    ],
    "resource": [
      {
        "files": [ "images/**" ],
        "exclude": [ "obj/**", "_site/**" ]
      }
    ],
    "overwrite": [
      {
        "files": [ "apidoc/**.md" ],
        "exclude": [ "obj/**", "_site/**" ]
      }
    ],
    "dest": "../../docs",
    "globalMetadata": {
      "_appTitle": "Purchasing for Unity",
      "_appFooter": "Copyright (c) 2017-2018 Alexander Bogarsukov"
    }
  }
}